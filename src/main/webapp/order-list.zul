<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<window id="orderList"
        height="80%"
        width="80%"
        apply="org.zkoss.bind.BindComposer"
        viewModel="@id('vm') @init('org.zkoss.reference.developer.spring.security.ui.OrderListVM')">
    <borderlayout width="900px" height="840px" >
        <west size="60%" flex="true">
            <div>
                <hbox align="center">
                    Адрес:
                    <textbox value="@bind(vm.keyWord)"/>
                    <button label="Поиск" image="/images/search.png" onClick="@command('search')"/>
                    <button label="Добавить" image="/images/search.png" onClick="@command('addOrder')"/>
                    <button label="Обновить" image="/images/search.png" onClick="refresh(placeList)"/>
                </hbox>
                <listbox height="100%" model="@bind(vm.orderListModel)" emptyMessage="Заказов не Найдено"
                         selectedItem="@bind(vm.selectedOrder)" style="margin-top:10px"
                         mold="paging" pageSize="10">
                    <listhead>
                        <listheader width="10%" label="№"/>
                        <listheader width="20%" label="Дата"/>
                        <listheader width="70%" label="Описание"/>
                    </listhead>
                    <template name="model">
                        <listitem>
                            <listcell label="@bind(each.id)"></listcell>
                            <listcell label="@bind(each.date)"></listcell>
                            <listcell label="@bind(each.description)"></listcell>
                        </listitem>
                    </template>
                </listbox>
            </div>
        </west>
        <east size="40%" splittable="true" collapsible="true">
            <div>
                <hbox style="margin-top:20px" visible="@bind(not empty vm.selectedOrder)">
                    <vbox>
                        <hlayout>
                            № :
                            <label value="@bind(vm.selectedOrder.id)" style="font-weight:bold"/>
                        </hlayout>
                        <hlayout>
                            Описание :
                            <label value="@bind(vm.selectedOrder.description)" style="font-weight:bold"/>
                        </hlayout>
                    </vbox>
                </hbox>
            </div>
        </east>
    </borderlayout>

</window>